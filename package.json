{
  "name": "tiny-knex-orm",
  "description": "A simple and clean library for manipulating single database records with knex.",
  "version": "1.1.0",
  "author": "Aaron Larner",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"vite build --watch\"",
    "build": "tsc --declaration && vite build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    "postversion": "git push && git push --tags",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn build",
    "test": "vitest --run --dir ./src",
    "test-watch": "vitest --dir ./src",
    "test-coverage": "vitest run --dir ./src --coverage"
  },
  "devDependencies": {
    "@types/koa": "2.14.0",
    "@types/node": "20.11.17",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vitest/coverage-v8": "2.0.2",
    "concurrently": "8.2.2",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "nodemon": "3.0.3",
    "rollup-plugin-node-externals": "7.0.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-dts": "3.7.2",
    "vitest": "2.0.2"
  },
  "peerDependencies": {
    "knex": "2.x"
  },
  "dependencies": {
    "type-fest": "4.10.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
